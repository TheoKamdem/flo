# Configuration Flowise pour Render
# Copiez ce fichier vers .env et modifiez les valeurs

# Configuration de base
NODE_ENV=production
PORT=10000

# Base de données (SQLite pour Render)
DATABASE_TYPE=sqlite
DATABASE_PATH=/opt/render/project/src/database.sqlite

# Sécurité (générez des clés uniques)
FLOWISE_SECRETKEY_OVERWRITE=your-secret-key-here
JWT_AUTH_TOKEN_SECRET=your-jwt-secret-here
JWT_REFRESH_TOKEN_SECRET=your-refresh-secret-here
EXPRESS_SESSION_SECRET=your-session-secret-here
TOKEN_HASH_SECRET=your-token-hash-secret-here

# Configuration de l'application
APP_URL=https://your-app-name.onrender.com

# Stockage
STORAGE_TYPE=local
BLOB_STORAGE_PATH=/opt/render/project/src/uploads

# Logging
LOG_LEVEL=info
LOG_PATH=/opt/render/project/src/logs

# CORS et sécurité
CORS_ORIGINS=https://your-app-name.onrender.com
DISABLE_FLOWISE_TELEMETRY=true

# Limites
FLOWISE_FILE_SIZE_LIMIT=10

# Configuration Node.js
NODE_OPTIONS=--max-old-space-size=512

# Configuration JWT
JWT_ISSUER=your-app-name.onrender.com
JWT_AUDIENCE=your-app-name.onrender.com
JWT_TOKEN_EXPIRY_IN_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRY_IN_MINUTES=10080

# Configuration des nœuds
SHOW_COMMUNITY_NODES=true
DISABLED_NODES=

# Configuration email (optionnel)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=true
SENDER_EMAIL=noreply@your-app-name.onrender.com

# Configuration proxy (si nécessaire)
GLOBAL_AGENT_HTTP_PROXY=
GLOBAL_AGENT_HTTPS_PROXY=
GLOBAL_AGENT_NO_PROXY=localhost,127.0.0.1

# Configuration queue (optionnel)
MODE=main
QUEUE_NAME=flowise
WORKER_CONCURRENCY=1

# Configuration des métriques (optionnel)
ENABLE_METRICS=false
METRICS_PROVIDER=prometheus
METRICS_SERVICE_NAME=flowise
