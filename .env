# Flowise Configuration for Plesk Deployment
# Copy this file to .env and modify the values as needed

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (SQLite by default - perfect for Plesk)
DATABASE_PATH=/var/www/vhosts/nettmobinfotech.fr/NettmobIA/flowise_data/database.sqlite
DATABASE_TYPE=sqlite

# Security
FLOWISE_SECRETKEY_OVERWRITE=nettmob-secret-key-2024
JWT_AUTH_TOKEN_SECRET=nettmob-jwt-secret-2024
JWT_REFRESH_TOKEN_SECRET=nettmob-refresh-secret-2024

# Application URL (replace with your domain)
APP_URL=https://nettmobinfotech.fr

# Storage Configuration
STORAGE_TYPE=local
BLOB_STORAGE_PATH=/var/www/vhosts/nettmobinfotech.fr/NettmobIA/flowise_data/uploads

# Logging
LOG_LEVEL=info
LOG_PATH=/var/www/vhosts/nettmobinfotech.fr/NettmobIA/flowise_data/logs

# CORS Configuration
CORS_ORIGINS=https://nettmobinfotech.fr

# Disable telemetry (optional)
DISABLE_FLOWISE_TELEMETRY=true

# File size limit (in MB)
FLOWISE_FILE_SIZE_LIMIT=10
