# Flowise Configuration for Plesk Deployment
# Copy this file to .env and modify the values as needed

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (SQLite by default - perfect for Plesk)
DATABASE_PATH=/var/www/vhosts/yourdomain.com/flowise_data/database.sqlite
DATABASE_TYPE=sqlite

# Security
FLOWISE_SECRETKEY_OVERWRITE=your-secret-key-here
JWT_AUTH_TOKEN_SECRET=your-jwt-secret-here
JWT_REFRESH_TOKEN_SECRET=your-refresh-secret-here

# Application URL (replace with your domain)
APP_URL=https://yourdomain.com

# Storage Configuration
STORAGE_TYPE=local
BLOB_STORAGE_PATH=/var/www/vhosts/yourdomain.com/flowise_data/uploads

# Logging
LOG_LEVEL=info
LOG_PATH=/var/www/vhosts/yourdomain.com/flowise_data/logs

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com

# Disable telemetry (optional)
DISABLE_FLOWISE_TELEMETRY=true

# File size limit (in MB)
FLOWISE_FILE_SIZE_LIMIT=10
